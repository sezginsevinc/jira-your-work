{
    "manifest_version": 3,
    "name": "Jira Floating Your Work",
    "version": "1.1",
    "description": "Jira'da 'assigned to me' issues için modern floating button ile hızlı erişim sağlar.",
    "author": "Sezgin Sevinç",
    "permissions": ["storage", "scripting", "activeTab"],
    "action": {
      "default_popup": "src/popup/popup.html",
      "default_title": "Jira Floating Button"
    },
    "content_scripts": [
      {
        "matches": ["*://*.atlassian.net/*"],
        "js": ["src/content/content.js"]
      }
    ],
    "background": {
      "service_worker": "src/background/background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}
